/* pages/roomDetail/index.wxss */
.main-image{
    width: 100%;border-radius: 20px;
}

page {
    background-color: #f6f6f6;
    padding-bottom: 60rpx;
  }
  
.room-main-info{
    border-radius: 10px;
    font-weight: 600;
    font-size: 14px;
    width: 95%;
    display: flex;
    margin-left: 20px;
    margin-right: 20px;
    background-color: rgb(255, 255, 255);
    box-shadow: rgb(0, 0, 0);
}

.cover-view {
    position: absolute;
    top: calc(50% - 150rpx);
    left: calc(50% - 300rpx);
    /* opacity: .7; */
  }
  
  .flex-wrp{
    display:flex;
    margin-left: 20px;
    margin-right: 20px;
    background-color: rgb(255, 255, 255);
    border-radius: 20px;
    margin-top: 10px;
    /* padding-left: 20px;
    padding-right: 20px; */
  }
  .flex-wrp-sub{
    display:flex;
    background-color: rgb(255, 255, 255);
    padding-left: 20px;
    padding-right: 20px;
    margin-bottom: 20px;
    margin-top: -50px;
  }
  
  .flex-item{
    width: 200rpx;
    height: 300rpx;
    font-size: 26rpx;
  }
  .room-subtitle{
    font-size: 14px;
    font-weight: 600;
    margin-top: 10px;
    color: #0D0D0D;
  }
  .room-total-text{
    font-size: 14px;
    margin-top: 0px;
    color: #0D0D0D;
  }
  .room-subdetail{
    font-size: 13px;
    margin-top: 0px;
    color: #A3A3A3;
  }
  
  .room-account-level{
    font-size: 14px;
    font-weight: 500;
    color: #0D0D0D;
  }
  
.view-btn{
    font-size: 14px;
    margin-top: 10px;
    margin-bottom: 10px;
    margin-right: 8px;
    background-color: #05C160;
    color: rgb(255, 255, 255);
    text-align: center;
    width: auto;
    margin-left: auto;
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 3px;
    padding-bottom: 3px;
    border-radius: 8px;
  }
  
.power_item_icon {
    width: 15px;
    height: 15px;
  }